<h1>New Mountains</h1>
<form action="/mountains" method="post">
  <label for="name">Name</label>
  <input type="text" id="name" name="name" placeholder="Mountains Name" required autofocus>

  <label for="height">Height</label>
  <input type="number" id="height" name="height" placeholder="Mountains height" required autofocus>

  <label for="place">Place</label>
  <input type="text" id="place" name="place" placeholder="place" required autofocus>

  <label for="image">Image</label>
  <input type="url" id="image" name="image" placeholder="http://...." required autofocus>

  <button>Create</button>


</form>

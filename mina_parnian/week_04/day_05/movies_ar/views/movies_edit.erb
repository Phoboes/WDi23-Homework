<h1>Edit Movies</h1>
<div class="form-position">
<form action="/movies/<%= @movie['id'] %>" method="post">
  <input type="text" name="name" value="<%= @movie.name %>" placeholder="Movie Name">
  <input type="text" name="genre" value="<%= @movie.genre %>" placeholder="Movie Genre">
  <input type="text" name="year" value="<%= @movie.year %>" placeholder="Movie Year">
  <input type="text" name="director" value="<%= @movie.director %>" placeholder="Director">
  <input type="url" class="all-image-size" name="image" value="<%= @movie['image'] %>" placeholder="http://...">

  <button>Update movie</button>
</form>
</div>
